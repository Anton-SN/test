<form action="/login" method="POST">
  <h2>Input User</h2>

  <div class="input-field">
    <h4>Login form</h4>
    <p>Email</p>
    <input type="text" name="email" placeholder="email">
    <p>Password</p>
    <input type="password" name="password" placeholder="Password">
  </div>
  {{#if wrongPass}}
    <p>Wrong password</p> 
  {{/if}}

  <button type="submit" class="btn">Login</button>
</form>